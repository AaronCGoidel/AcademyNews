        link(rel='stylesheet', href='../style/cards.css')
        link(rel='stylesheet', href='../style/sections.css')
        link(rel='stylesheet', href='../style/responsive.css')
    body
        .sidenav-overlay(onclick='closeNav()')
        header
            #sidenav.sidenav
                a.closebtn(href='javascript:;', onclick='closeNav()')
                    i.fa.fa-times
                span.nav-item.title MENU
                a.nav-item(href='/') Home
                a.nav-item(href='#') Sports
                a.nav-item(href='#') About
            nav.navbar
                .container
                    .row.align-items-center
                        .col
                            a.navbar-brand(href='javascript:;', onclick='openNav()')
                                i.fa.fa-bars.fa-lg(aria-hidden='true')
                        .col.text-center
                            a.navbar-brand(href='#')
                                img(src='../assets/logo.png', height='100')
                        .col.text-right
                            .social-menu
                                a(href='javascript:;')
                                    i.fa.fa-facebook-official.fa-lg(aria-hidden='true')
                                a(href='javascript:;')
                                    i.fa.fa-twitter.fa-lg(aria-hidden='true')
                                a(href='javascript:;')
                                    i.fa.fa-instagram.fa-lg(aria-hidden='true')
                                a(href='javascript:;')
                                    i.fa.fa-youtube.fa-lg(aria-hidden='true')
        main
            .container
                section.featured-content
                    .featured-container
                        .row
                            .col-4.mb-3
                                .card.card-inverse
                                    a.card-link(href='/article/test')
                                        img.card-img(src='http://placehold.it/370x430', alt='Card image')
                                        .card-img-overlay
                                            .card-block
                                                h4.card-title=featuredPosts[0].title
                                                p.card-text=featuredPosts[0].blurb
                                                p.card-text
                                                    small By: &nbsp
                                                    small=featuredPosts[0].author
                            .col-8.mb-3
                                .card.split.mb-2
                                    a.card-link(href='/article/002')
                                        i.fa.fa-newspaper-o.card-icon(aria-hidden='true')
                                        .row.no-gutters
                                            .col
                                                img.card-img(src='http://placehold.it/380x210', alt='Card image')
                                            .col
                                                .card-block
                                                    .card-caption
                                                        h4.card-title=featuredPosts[1].title
                                                        p.card-text=featuredPosts[1].blurb
                                                    p.card-text.text-right
                                                        small By: &nbsp
                                                        small=featuredPosts[1].author
                                .card.split
                                    a.card-link(href='#')
                                        .row.no-gutters
                                            .col
                                                img.card-img(src='http://placehold.it/380x210', alt='Card image')
                                            .col
                                                .card-block
                                                    .card-caption
                                                        h4.card-title=featuredPosts[2].title
