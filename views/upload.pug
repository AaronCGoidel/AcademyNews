//form for uploading articles to database
doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Upload | The Academy News
    body
        form(action="/upload" method="POST").form-horizontal
            fieldset
                legend Submit Article
                .form-group
                    label.col-md-4.control-label(for='author') Author
                    .col-md-4
                        input#author.form-control.input-md(name='author', type='text', placeholder='name of author')
                .form-group
                    label.col-md-4.control-label(for='id') ID
                    .col-md-4
                        input#id.form-control.input-md(name='id', type='text', placeholder='id')
                .form-group
                    label.col-md-4.control-label(for='title') Title
                    .col-md-4
                        input#title.form-control.input-md(name='title', type='text', placeholder='title')
                .form-group
                    label.col-md-4.control-label(for='blurb') Blurb
                    .col-md-8
                        input#blurb.form-control.input-md(name='blurb', type='text', placeholder='small summary')
                .form-group
                    label.col-md-4.control-label(for='content') Text
                    .col-md-4
                        textarea#content.form-control(name='content')
                .form-group
                    label.col-md-4.control-label(for='imageURL') Image
                    .col-md-8
                        input#imageURL.form-control.input-md(name='imageURL', type='text', placeholder='url of image')
                .form-group
                    label.col-md-4.control-label(for='photoCred') Photo Cred
                    .col-md-4
                        input#photoCred.form-control.input-md(name='photoCred', type='text', placeholder='photo credit')
                .form-group
                    label.col-md-4.control-label(for='publishDate') Date
                    .col-md-4
                        input#publishDate.form-control.input-md(name='publishDate', type='text', placeholder='date')
            button.input_submit(type='submit') Submit
